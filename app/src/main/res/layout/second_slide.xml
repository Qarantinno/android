<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slide2">
    <ImageView
        android:id="@+id/second_slide_logo"
        android:layout_width="100dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/who"
        android:layout_marginTop="190dp"
        />
    <TextView
        android:id="@+id/slide2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide2_title"
        android:textColor="@color/textColorBlack"
        android:fontFamily="@font/allura"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_below="@+id/second_slide_logo"
        android:layout_marginTop="12dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide2_desc"
        android:textColor="@color/textColorBlack"
        android:fontFamily="@font/allura"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/slide2_title"
        android:layout_marginTop="12dp"
        android:gravity="center"/>

</RelativeLayout>